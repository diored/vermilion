<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <AssemblyName>Vermilion.Complete</AssemblyName>
    <RootNamespace>DioRed.Vermilion</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Configurations>Debug;Release;DebugEngine</Configurations>
  </PropertyGroup>

  <PropertyGroup>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Authors>DioRED</Authors>
    <Version>13.0.1</Version>
    <PackageId>DioRed.Vermilion</PackageId>
    <PackageLicenseExpression>CC-BY-4.0</PackageLicenseExpression>
    <PackageIcon>packageIcon.png</PackageIcon>
    <Description>Vermilion chat bot engine (complete package). Contains the Core and all supported connectors (Telegram) and chat storages (Azure Table, In-memory, SQL Server).</Description>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\Assets\packageIcon.png" Pack="true" PackagePath="." />
  </ItemGroup>

  <Choose>
      <When Condition=" '$(Configuration)' == 'DebugEngine' ">
          <ItemGroup>
              <ProjectReference Include="..\Core\Vermilion.Core.csproj" />
              <ProjectReference Include="..\ChatStorage\AzureTable\Vermilion.ChatStorage.AzureTable.csproj" />
              <ProjectReference Include="..\ChatStorage\InMemory\Vermilion.ChatStorage.InMemory.csproj" />
              <ProjectReference Include="..\ChatStorage\SqlServer\Vermilion.ChatStorage.SqlServer.csproj" />
              <ProjectReference Include="..\Connectors\Telegram\Vermilion.Connectors.Telegram.csproj" />
              <ProjectReference Include="..\Hosting\Vermilion.Hosting.csproj" />
          </ItemGroup>
      </When>
      <Otherwise>
          <ItemGroup>
            <PackageReference Include="DioRed.Vermilion.ChatStorage.AzureTable" Version="13.0.0" />
            <PackageReference Include="DioRed.Vermilion.ChatStorage.InMemory" Version="13.0.0" />
            <PackageReference Include="DioRed.Vermilion.ChatStorage.SqlServer" Version="13.0.0" />
            <PackageReference Include="DioRed.Vermilion.Core" Version="13.0.0" />
            <PackageReference Include="DioRed.Vermilion.Hosting" Version="13.0.0" />
            <PackageReference Include="DioRed.Vermilion.Connectors.Telegram" Version="13.0.1" />
          </ItemGroup>
      </Otherwise>
  </Choose>

</Project>